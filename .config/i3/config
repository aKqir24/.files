# Daemons
exec_always --no-startup-id autotiling
exec_always --no-startup-id picom
exec --no-startup-id dunst 
# exec --no-startup-id pywalfox start
exec --no-startup-id udiskie
# exec_always redshift-qt

# Post-Setup
